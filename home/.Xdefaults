Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
Xcursor.theme: White

! UXrvt
urxvt.scrollBar:false
urxvt.visualBell:true
urxvt.sessionMgt:false
urxvt.urlLauncher:chromium-dev

! Tabs
URxvt.perl-ext-common:  default,tabbedex
URxvt.tabbed.autohide: yes

! Font
urxvt.font:xft:Monaco:pixelsize=11
urxvt.letterSpace: -1

! urxvt (TODO: is there a way to target both urxvt *and* xterm?)
urxvt*foreground:#E6E1DC
urxvt*background:#2B2B2B

! Black
urxvt*color0:#2B2B2B
urxvt*color8:#B0B3B9
! Red
urxvt*color1:#DA4939
urxvt*color9:#DA4939
! Green
urxvt*color2:#519F50
urxvt*color10:#A5C261
! Yellow (=orange)
urxvt*color3:#CC7833
urxvt*color11:#FFC66D
! Blue
urxvt*color4:#6D9CBE
urxvt*color12:#D0D0FF
! Magenta (=brown)
urxvt*color5:#BC9458
urxvt*color13:#F1B356
! Cyan
urxvt*color6:#D0D0FF
urxvt*color14:#B0C3DA
! White
urxvt*color7:#F8F8F8
urxvt*color15:#FFFFFF
